{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",

    "declaration": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}